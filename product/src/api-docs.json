{
    "openapi": "3.0.3",
    "info": {
        "title": "API ECOMM Products",
        "description": "API restful products eccom",
        "version": "1.0.0",
        "termsOfService": "http://example.com",
        "contact": {
            "name": "Suporte a Devs",
            "email": "contato@example.com",
            "url": "http://example.com"
        }
   },
   "servers": [
    {
        "url": "http://localhost:3000",
        "description": "Server I"
    }
   ],
   "paths": {
       "/product": {
            "summary": "Cria um produto",
            "description": "Cria um produto no banco de dados de acordo com os dados fornecidos",
            "post": {
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/ProductData"
                            }
                        }
                    }
                },            
               "responses": {
                   "201": {
                       "description": "Cria um produto",
                       "content": {
                           "application/json": {
                               "schema": {
                                   "type": "object",
                                   "properties": {
                                       "usuarioId": { "type": "string" },
                                       "createdDate":{ "type": "string" },
                                       "id": { "type": "string" },
                                       "nome": { "type": "string" },
                                       "descricao": { "type": "string" },
                                       "categoria": { "type": "string" },
                                       "quantidade": { "type": "integer" },
                                       "valor": { "type": "number" },
                                       "caracteristicas": { 
                                           "type": "array",
                                           "items": {
                                               "properties": {
                                                   "nome": { "type": "string" },
                                                   "descrição": { "type": "string" }
                                                }
                                            }
                                        },
                                        "imagens": {
                                            "type": "array",
                                            "items": {
                                                "properties": {
                                                    "url": { "type": "string" },
                                                    "descricao": { "type": "string" } 
                                                }
                                            }
                                        }
                                    }
                                       
                               }
                            }
                        }
                    }
                }
            }
        }
    },
   "components": {
      "schemas": {
        "ImageData": {
            "type": "object",
            "properties": {
                "url": {
                    "type": "string"
                },
                "descricao": {
                    "type": "string"
                }
            }
        },
        "caracteristicaData": {
            "type": "object",
            "properties": {
                "nome": {
                    "type": "string"
                },
                "descricao": {
                    "type": "string"
                }
            }
        },
        "ProductData": {
            "type": "object",
            "properties": {
                "usuarioId": { "type": "string" },
                "createdDate":{ "type": "string" },
                "id": { "type": "string" },
                "nome": { "type": "string" },
                "descricao": { "type": "string" },
                "categoria": { "type": "string" },
                "quantidade": { "type": "integer" },
                "valor": { "type": "number" },
                "caracteristicas": { 
                    "type": "array",
                    "items": {
                        "$ref": "#/components/schemas/caractaristicaData" 
                     }
                 },
                 "imagens": {
                    "type": "array",
                    "items": {
                       "$ref": "#/components/schemas/ImagemData"
                    }
                 }
            }
        }

      }

    }
}